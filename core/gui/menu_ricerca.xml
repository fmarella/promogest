<?xml version="1.0"?>
<interface>
  <requires lib="gtk+" version="2.16"/>
  <!-- interface-naming-policy project-wide -->
  <object class="GtkMenu" id="menu_ricerca">
    <property name="visible">True</property>
    <child>
      <object class="GtkRadioMenuItem" id="codice_articolo">
        <property name="visible">True</property>
        <property name="label" translatable="yes">codice articolo</property>
        <property name="use_underline">True</property>
      </object>
    </child>
    <child>
      <object class="GtkRadioMenuItem" id="codice_a_barre">
        <property name="visible">True</property>
        <property name="label" translatable="yes">codice_a_barre</property>
        <property name="use_underline">True</property>
        <property name="group">codice_articolo</property>
      </object>
    </child>
    <child>
      <object class="GtkRadioMenuItem" id="descrizione">
        <property name="visible">True</property>
        <property name="label" translatable="yes">descrizione</property>
        <property name="use_underline">True</property>
        <property name="draw_as_radio">True</property>
        <property name="group">codice_articolo</property>
      </object>
    </child>
    <child>
      <object class="GtkRadioMenuItem" id="codice_fornitore">
        <property name="visible">True</property>
        <property name="label" translatable="yes">codice fornitore</property>
        <property name="use_underline">True</property>
        <property name="draw_as_radio">True</property>
        <property name="group">codice_articolo</property>
      </object>
    </child>
  </object>
</interface>
