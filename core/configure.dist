[Composer]
emailcompose = thunderbird
subject = "[ Invio Doc: %s ]"
bodytemplate = """<p>Testo da gestire come corpo template
                permette anche di andare a capo se necessario
                <br />
                <br />
                da modificare nel configure interno all'azienda</p>
                <br />"""
