[Database]
user = promoadmin
password = admin
host = db.promotux.it
port = 5432
database = promogest_demo
azienda= azienda_mentor
tipodb = sqlite
[RuoliAzioni]
mod_enable=No


#NON RIMUOVERE LE RIGHE VUOTE SOPRA QUESTA
# L'opzione omogeneus_codice serve a stabilire come dev'essere trattato il codice.
#    Permette 4 possibili opzioni che sono : None ( non in uso),
#                                            upper ( Maiuscolizza tutto il codice),
#                                            capitalize ( Maiuscolizza solo la prima lettera ),
#                                            lower ( Minuscolizza tutto il codice)


[Numbers]
decimals = 2
batch_size = 15
combo_column = 3

[Documenti]
cartella_predefinita =
pdf_reader = acroread,evince,okular,kghostview,xpdf
# Il processo di stampa necessita di un visualizzatore di PDF:
# - su GNU/Linux consigliamo kpdf o evince (sostituire con la voce che interessa)
# - su MS Windows consigliamo l'utilizzo di Adobe Acrobat Reader 8
#   (download http://ardownload.adobe.com/pub/adobe/reader/win/8.x/8.1.2/ita/AdbeRdr812_it_IT.exe )
#pdf_reader = C:\Programmi\Adobe\Reader~1.0\Reader\AcroRd32.exe

fornitore_predefinito =  ""
cliente_predefinito = ""
tipo_documento_predefinito = ""
tipo_movimento_predefinito =  ""
ricerca_per = codice / descrizione / codice_a_barre / codice_articolo_fornitore
color_base = #F9FBA7
color_text = black

[Feed]
feed = True

[Articoli]
lunghezza_codice_famiglia = 0
lunghezza_progressivo = 7
numero_famiglie = 0
prefisso_codice = ART
omogeneus_codice= upper
struttura_codice = ART000000
immagini = True

[Clienti]
lunghezza_codice = 5
prefisso_codice = CL
omogeneus_codice= upper
struttura_codice = CLI000000

[Forniture]
omogeneus_codice = upper

[Fornitori]
lunghezza_codice = 5
prefisso_codice = FO
omogeneus_codice= upper
struttura_codice = FOR000000

[Agenti]
omogeneus_codice = upper
prefisso_codice = AG
lunghezza_codice = 5
struttura_codice = AG000000

[Famiglie]
omogeneus_codice = upper

[Vettori]
omogeneus_codice = upper
prefisso_codice = VE
lunghezza_codice = 5
struttura_codice = VE000000


[SMTP]
smtpserver = cambiami
emailmittente = cambia anche me

[Multilinea]
multilinealimite = 40


[Moduli]
cartella_moduli = ./promogest/modules

#in sistemi *nix inserire thunderbird -compose, in sistemi windows  Ã¨ necessario
# inserire anche il percorso completo C:\programmi\Thunderbird ....
# Accetta html ma non virgole
[Composer]
emailcompose = thunderbird
subject = "[ Invio Doc: %s ]"
bodytemplate = """<p>Testo da gestire come corpo template
                permette anche di andare a capo se necessario
                <br />
                <br />
                da modificare nel configure interno all'azienda</p>
                <br />"""
